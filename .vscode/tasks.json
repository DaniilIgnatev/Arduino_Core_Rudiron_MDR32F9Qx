{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Очистить каталог сборки",
            "command": "rm -rf build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ]
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "type": "shell",
            "label": "Выпуск: собрать",
            "command": "mkdir build; cmake -DCMAKE_BUILD_TYPE=Release -S . -B build/; cmake --build build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/build"
                ]
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "type": "shell",
            "label": "Выпуск: очистить и собрать",
            "group": "build",
            "dependsOn": [
                "Очистить каталог сборки",
                "Выпуск: собрать"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "type": "shell",
            "label": "Отладка: собрать",
            "command": "mkdir build; cmake -DCMAKE_BUILD_TYPE=Debug -S . -B build/; cmake --build build",
            "group": {
                "kind": "build",
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/build"
                ]
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "type": "shell",
            "label": "Отладка: очистить и собрать",
            "group": "build",
            "dependsOn": [
                "Очистить каталог сборки",
                "Отладка: собрать"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "type": "shell",
            "label": "Очистить флеш-память",
            "command": "Rudiron Programmer",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "bootloader_1986be92qi.hex",
                "build/Arduino_Core_Rudiron.hex",
                "--verify_bootloader",
                "--speed",
                "16",
                "--erase",
                "--english",
            ],
            "dependsOn": [
                "Выпуск: собрать"
            ],
            "group": "none",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "type": "shell",
            "label": "Загрузить в флеш-память",
            "command": "Rudiron Programmer",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "bootloader_1986be92qi.hex",
                "build/Arduino_Core_Rudiron.hex",
                "--speed",
                "16",
                "--verify_bootloader",
                "--load",
                "--run",
                "--english",
            ],
            "dependsOn": [
                "Выпуск: собрать"
            ],
            "group": "none",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "type": "shell",
            "label": "Запустить",
            "command": "Rudiron Programmer",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "bootloader_1986be92qi.hex",
                "build/Arduino_Core_Rudiron.hex",
                "--speed",
                "16",
                "--run",
                "--english",
            ],
            "group": "none",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}