{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Выпуск: собрать",
            "command": "cmake -DCMAKE_BUILD_TYPE=Release .; cmake --build .",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/build"
                ]
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "type": "shell",
            "label": "Выпуск: очистить и собрать",
            "command": "cmake -DCMAKE_BUILD_TYPE=Release .; cmake --build . --clean-first",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/build"
                ]
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "type": "shell",
            "label": "Отладка: собрать",
            "command": "cmake -DCMAKE_BUILD_TYPE=Debug .; cmake --build .",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "build",
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/build"
                ]
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "type": "shell",
            "label": "Отладка: очистить и собрать",
            "command": "cmake -DCMAKE_BUILD_TYPE=Debug .; cmake --build . --clean-first",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/build"
                ]
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "type": "shell",
            "label": "Загрузить в флеш-память",
            "command": "Rudiron Programmer",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "bootloader_1986be92qi.hex",
                "build/Arduino_Core_Rudiron.hex",
                "--speed",
                "16",
                "--verify_bootloader",
                "--load",
                "--run",
                // "--english"
            ],
            "dependsOn": ["Выпуск: собрать"],
            "group": "none",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "type": "shell",
            "label": "Очистить флеш-память",
            "command": "Rudiron Programmer",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "bootloader_1986be92qi.hex",
                "build/Arduino_Core_Rudiron.hex",
                "--verify_bootloader",
                "--speed",
                "16",
                "--erase",
            ],
            "dependsOn": ["Выпуск: собрать"],
            "group": "none",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}